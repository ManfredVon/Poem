<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <SearchView
        android:id="@+id/sv_rhythm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:commitIcon="@drawable/ic_action_submit"
        android:goIcon="@drawable/ic_action_submit"
        android:queryHint="@string/hint_search_rhythm"/>

    <ListView
        android:id="@+id/lv_rhythm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@style/PoemTextAppearance.Large"
        android:text="@string/empty_text_fragment_rhythm"
        android:visibility="gone"/>

</LinearLayout>